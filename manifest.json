{
  "manifest_version": 3,
  "name": "AIO - All-In-One AI Assistant",
  "version": "1.0.0",
  "description": "Chrome Extension using built-in AI APIs for chat, summarization, writing, and rewriting with local processing",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AIO Assistant",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
