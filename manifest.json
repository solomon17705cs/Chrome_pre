{
  "manifest_version": 3,
  "name": "AI Assistant Sidebar",
  "version": "1.0.0",
  "description": "Chrome Extension using built-in AI APIs for chat, summarization, writing, and rewriting",
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Assistant"
  },
  "background": {
    "service_worker": "background.js"
  }
}
